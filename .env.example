# Sample environment configuration
# Copy to .env and customize for your environment

# Flask Configuration
FLASK_APP=main.app:app
# Options: development, testing, production
FLASK_ENV=development

# Security - Generate a good secret key for production!
# You can use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-key-please-change-in-production

# Server Configuration
PORT=5000
HOST=0.0.0.0
FLASK_RUN_HOST=0.0.0.0

# Database Configuration
# SQLite (development):
DATABASE_URI=sqlite:///app.db
# PostgreSQL (production example):
# DATABASE_URI=postgresql://user:password@host:port/dbname

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# Uncomment to log to file (default is stdout only)
# LOG_FILE=logs/app.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api
